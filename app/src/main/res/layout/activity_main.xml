<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/buttonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="@dimen/padding_main"
        android:paddingVertical="@dimen/half_of_padding_main"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnCategory"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/btn_layout_margin_end"
            android:paddingVertical="@dimen/btn_padding_vertical"
            style="@style/StyleNavButton"
            android:backgroundTint="@color/btn_category_color"
            android:text="@string/title_categories"
            android:contentDescription="@string/btn_categories_description"/>

        <Button
            android:id="@+id/btnFavorites"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/btn_layout_margin_end"
            android:paddingVertical="@dimen/btn_padding_vertical"
            style="@style/StyleNavButton"
            android:backgroundTint="@color/btn_favorites_color"
            android:text="@string/title_favorites"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd"
            android:contentDescription="@string/btn_favorites_description"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>